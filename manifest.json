{
  "manifest_version": 3,
  "name": "Stay Focused - Disable Visibility API",
  "version": "0.1",
  "description": "Forces document to stay visible via disable visibility API",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "homepage_url": "https://github.com/NF-coder/stay-focused",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "stay-focused@NF-coder",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["disable.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "icon@48.png",
    "96": "icon@96.png",
    "128": "icon@128.png"
  }
}